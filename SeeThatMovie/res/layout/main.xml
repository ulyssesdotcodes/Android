<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="1"
  	android:padding="@dimen/default_padding">
    <EditText android:layout_height="wrap_content" android:layout_width="match_parent" android:id="@+id/searchMovies">
        <requestFocus></requestFocus>
    </EditText>
    <Button android:text="Add a movie" 
    	android:id="@+id/addMovieHome" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"></Button>
    <EditText android:id="@+id/categorySelectText" android:layout_height="wrap_content" android:layout_width="match_parent"></EditText>
    <Button android:text="View Movie List" 
    	android:id="@+id/movieList" 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content"></Button>
    <ListView android:id="@+id/movieList" 
    	android:layout_height="wrap_content" 
    	android:layout_width="match_parent"></ListView>
</LinearLayout>
