<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="wrap_content"
  android:layout_height="wrap_content"
  android:layout_alignLeft="@+id/name" android:layout_below="@+id/name"
  android:padding="12dip">
  
   	<CheckBox android:layout_width="wrap_content" android:text="" android:layout_height="wrap_content" android:id="@+id/checkbox" android:layout_alignTop="@+id/name" android:layout_alignParentRight="true"></CheckBox>
  
 	<TextView android:layout_width="wrap_content" android:layout_alignParentLeft="true"
 		 android:layout_height="wrap_content" android:layout_toLeftOf="@+id/checkbox"
		 android:id="@+id/name" android:textColor="@color/white"
		 android:text="Movie Title " android:gravity="center_vertical" android:layout_centerVertical="true"
		 android:textStyle="bold" android:textSize="18dip" android:layout_marginRight="10dp"
		 android:fadingEdge="horizontal" android:fadingEdgeLength="60dp" android:ellipsize="marquee"/>
		 
</RelativeLayout>
